<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:background="#fbfbfb">

    <LinearLayout
        style="@style/width_match_parent_max_400"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="top|center">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_study_completed"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/study_completed"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="16sp"
                    android:layout_marginBottom="0dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/study_completed_message"-->
        <!--&lt;!&ndash;android:visibility="gone"&ndash;&gt;-->
        <!--android:layout_marginBottom="16dp">-->


    <!-- -->
        <!--</android.support.v7.widget.CardView>-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/cardview_light_background">

                <TextView
                    android:id="@+id/survey_sleep_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_survey_sleepiness"
                    android:textSize="16sp"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_marginBottom="16dp"/>

                <RadioGroup
                    android:id="@+id/survey_rg_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/survey_rg_1_rb_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/survey_scale_1"/>

                    <RadioButton
                        android:id="@+id/survey_rg_1_rb_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/survey_scale_2"/>

                    <RadioButton
                        android:id="@+id/survey_rg_1_rb_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/survey_scale_3"/>

                    <RadioButton
                        android:id="@+id/survey_rg_1_rb_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/survey_scale_4"/>

                    <RadioButton
                        android:id="@+id/survey_rg_1_rb_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/survey_scale_5"/>

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/cardview_light_background">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/task_survey_sleepy"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_weight="1"
                        android:gravity="left"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/task_survey_alert"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_weight="1"
                        android:gravity="right"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/cardview_light_background">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_survey_caffeination"
                    android:textColor="@color/cardview_dark_background"
                    android:id="@+id/survey_checkbox_caffeination"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_survey_nicotine"
                    android:textColor="@color/cardview_dark_background"
                    android:id="@+id/survey_checkbox_nicotine"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_survey_alcohol"
                    android:textColor="@color/cardview_dark_background"
                    android:id="@+id/survey_checkbox_alcohol"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_survey_food"
                    android:textColor="@color/cardview_dark_background"
                    android:id="@+id/survey_checkbox_food"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/error_message"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_survey_error_alert"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="0dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_send"
            android:id="@+id/survey_send"/>

    </LinearLayout>

</ScrollView>